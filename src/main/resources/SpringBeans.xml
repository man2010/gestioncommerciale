<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
          http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Déclarations de beans -->
    <bean id="role" class="com.gescom.model.Role"/>
    <bean id="rolehome" class="com.gescom.dao.RoleHome"/>
    
    <bean id="utilisateur" class="com.gescom.model.Utilisateur"/>
    <bean id="utilisateurhome" class="com.gescom.dao.UtilisateurHome"/>
    
    <bean id="famille" class="com.gescom.model.Famille" scope="prototype"/>
    <bean id="famillehome" class="com.gescom.dao.FamilleHome"/>
    <bean id="familleBean" class="com.gescom.beans.FamilleBean" scope="view"/>
    
    
    <!-- Produit -->
<bean id="produit" class="com.gescom.model.Produit" scope="prototype"/>
<bean id="produitHome" class="com.gescom.dao.ProduitHome"/>

<!-- Article -->
<bean id="article" class="com.gescom.model.Article" scope="prototype"/>
<bean id="articleHome" class="com.gescom.dao.ArticleHome"/>

<!-- Fournisseur -->
<bean id="fournisseur" class="com.gescom.model.Fournisseur" scope="prototype"/>
<bean id="fournisseurHome" class="com.gescom.dao.FournisseurHome"/>

<!-- ArticleVariante -->
<bean id="articleVarianteHome" class="com.gescom.dao.ArticleVarianteHome"/>
<bean id="articleVariante" class="com.gescom.dao.ArticleVariante" scope="prototype"/>

<!-- Catégorie Article -->
<bean id="categorieArticle" class="com.gescom.model.CategorieArticle" scope="prototype"/>
<bean id="categorieArticleHome" class="com.gescom.dao.CategorieArticleHome"/>

<!-- Variante -->
<bean id="variante" class="com.gescom.model.Variante" scope="prototype"/>
<bean id="varianteHome" class="com.gescom.dao.VarianteHome"/>


</beans>
